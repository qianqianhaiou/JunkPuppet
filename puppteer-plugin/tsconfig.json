{
  "include": ["src/*.ts", "src/**/*.ts"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES6",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": false,
    "strict": true,
    "resolveJsonModule": true,
    "typeRoots": ["src/types/*.d.ts"],
  },
}
